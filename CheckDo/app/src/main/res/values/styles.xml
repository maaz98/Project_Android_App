<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Widget"/>

    <style name="Widget.AppTheme"/>

    <style name="Widget.AppTheme.EventEditView">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable.End">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="TextAppearance.AppTheme.Hint" parent="TextAppearance.Design.Hint"/>

    <style name="TextAppearance.AppTheme.Hint.Disabled">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="Widget.AppTheme.TextView"/>

    <style name="Widget.AppTheme.TextView.Weather">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
    </style>

    <style name="Widget.AppTheme.Drawer">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
